<Window x:Class="demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBlock Text="Name:" Margin="0,0,5,0"/>
            <TextBox x:Name="NameTextBox" Width="100" Margin="0,0,10,0"/>
            <TextBlock Text="Value:" Margin="0,0,5,0"/>
            <TextBox x:Name="ValueTextBox" Width="50" Margin="0,0,10,0"/>
        </StackPanel>

        <DataGrid x:Name="Dg_Data" Grid.Row="1" ItemsSource="{Binding DataList}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Materials_name" Binding="{Binding Materials_name}" Width="Auto"/>
                <DataGridTextColumn Header="Product" Binding="{Binding Product}" Width="*"/>
                <DataGridTextColumn Header="Value_Of_Material" Binding="{Binding Value_Of_Material}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
