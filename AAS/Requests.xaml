<Window x:Class="Applic.Requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Applic"
        mc:Ignorable="d"
        Title="Заявки" Width="1620" Height="600" Icon="/DisplayFusion.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.943"/>
                <GradientStop Color="#FF036D54" Offset="0"/>
                <GradientStop Color="#FF000D0A" Offset="0.809"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>
        <Canvas Grid.ZIndex="1" Grid.Row="0">
            <Button x:Name="Create_Button" Visibility="Visible" Content="Новая заявка" Background="Transparent" Click="New_Letter_Click" Height="30" Width="196"  Canvas.Left="279" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Black" />
            <Button x:Name="Create_New_User_Button" Visibility="Visible" Content="Зарегестрировать нового пользователя" Background="Transparent" Click="Create_New_User_Click" Height="30" Width="229"  Canvas.Left="1342" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" />
            <Button x:Name="Back_Button" Content="Назад" Background="Transparent" Click="Button_Click" Height="30" Width="64" Canvas.Left="1256" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black"/>
            <TextBox x:Name="Search_TextBox" Canvas.Left="576" TextWrapping="Wrap" Text="" Background="Transparent" Canvas.Top="20" Width="476" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" BorderBrush="Black" Height="30"/>
            <Button Content="Поиск" Background="Transparent" Canvas.Left="1107" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Black" Height="30" Width="90" Click="Search_Button_Click"/>
            <Button Content="Сгенерировать отчет" Background="Transparent" Canvas.Left="21" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="30" BorderBrush="#FF020101" Click="Generate_Report_Button_Click"/>
        </Canvas>
        <DataGrid x:Name="Dg_Requests" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="Item_Click" Margin="0,0,0,10" Grid.Row="1">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF02251D" Offset="0.997"/>
                    <GradientStop Color="#FF036D54" Offset="0"/>
                    <GradientStop Color="#FF176D58" Offset="0.2"/>
                </LinearGradientBrush>
            </DataGrid.Background>
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Header="Время приема заявки" Binding="{Binding receipt_time}" />
                <DataGridTextColumn Width="Auto" Header="Время сдачи заявки" Binding="{Binding execute_time}" />
                <DataGridTextColumn Width="Auto"  Header="Номер заявки" Binding="{Binding request_id}" />
                <DataGridTextColumn Width="Auto" Header="Серийный номер модели" Binding="{Binding model_id}" />
                <DataGridTextColumn Width="Auto" Header="Исполнитель" Binding="{Binding executor}" />
                <DataGridTextColumn Width="Auto" Header="Тип связи" Binding="{Binding connection_type}" />
                <DataGridTextColumn Width="Auto" Header="ФИО иженера" Binding="{Binding specialist_name}" />
                <DataGridTextColumn Width="Auto" Header="Тип работ" Binding="{Binding type_of_work}" />
                <DataGridTextColumn Width="Auto" Header="Юр. название ТСП" Binding="{Binding legal_name}" />
                <DataGridTextColumn Width="Auto" Header="Адрес" Binding="{Binding destanition}" />
                <DataGridTextColumn Width="Auto" Header="ФИО заказчика" Binding="{Binding representative}" />
                <DataGridTextColumn Width="Auto" Header="Номер заказчика" Binding="{Binding represent_pnumber}" />
                <DataGridTextColumn Width="Auto" Header="Передаваемая модель" Binding="{Binding transmit_model}" />
                <DataGridTextColumn Width="Auto" Header="Серийный номер передаваемой модели" Binding="{Binding transmit_model_snumber}" />
                <DataGridTextColumn Width="Auto" Header="Изъятая модель" Binding="{Binding taken_model}" />
                <DataGridTextColumn Width="Auto" Header="Серийный номер изъятой модели" Binding="{Binding taken_model_snumber}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
