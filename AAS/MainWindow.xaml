<Window x:Class="Applic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Applic"
        mc:Ignorable="d"
        Title="Авторизация" Height="332" Width="281" Icon="/DisplayFusion.png">
    <Grid Height="332" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.943"/>
                <GradientStop Color="#FF036D54" Offset="0"/>
                <GradientStop Color="#FF031F19" Offset="0.87"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Войти" HorizontalAlignment="Left" Foreground="Green" Margin="54,183,0,0" VerticalAlignment="Top" Click="Entering_Button_Click" Height="29" Width="49" Background="Transparent" BorderBrush="Black" Grid.ColumnSpan="2" Grid.Column="2"/>
        <TextBox x:Name="login_tb" HorizontalAlignment="Left" Foreground="Black" Margin="54,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137" Height="34" Background="Transparent" BorderBrush="Black" Grid.ColumnSpan="2" Grid.Column="2"/>
        <PasswordBox x:Name="password_pb" HorizontalAlignment="Left" Foreground="Black" Margin="54,133,0,0" VerticalAlignment="Top" Width="137" Height="34" Background="Transparent" BorderBrush="Black" Grid.ColumnSpan="2" Grid.Column="2"/>
        <Label Content="Логин" Foreground="Black"  HorizontalAlignment="Left" Margin="54,16,0,0" VerticalAlignment="Top" Height="31" Width="54" FontSize="16" Grid.ColumnSpan="2" Grid.Column="2"/>
        <Label Content="Пароль" Foreground ="Black"  HorizontalAlignment="Left" Margin="54,95,0,0" VerticalAlignment="Top" Height="30" Width="94" FontSize="16" Grid.ColumnSpan="2" Grid.Column="2"/>
        <Button Content="Выход" Background="Transparent" HorizontalAlignment="Center" Margin="0,183,0,0" Foreground="Red"  VerticalAlignment="Top" Click="Exit_Button_Click" Height="29" Width="50" Grid.Column="3" BorderBrush="#FF060505"/>
    </Grid>
</Window>
